#!/bin/sh


T_FILTER=""
DATE_FILTER_A=""
DATE_FILTER_B="4000-12-30 23:59:59"
FILES=""
LIST_TICK=0
command=0
PROFIT=0
POS=0
LAST_PRICE=0
HIST_ORD=0
GRAPH_POS=0
WIDTH=0
WIDTH_BOOL=0
while [ $# -gt 0 ]; do
  case "$1" in
    "-h" | "--help") echo "    PŘÍKAZ může být jeden z:
        list-tick – výpis seznamu vyskytujících se burzovních symbolů, tzv. “tickerů”.
        profit – výpis celkového zisku z uzavřených pozic.
        pos – výpis hodnot aktuálně držených pozic seřazených sestupně dle hodnoty.
        last-price – výpis poslední známé ceny pro každý ticker.
        hist-ord – výpis histogramu počtu transakcí dle tickeru.
        graph-pos – výpis grafu hodnot držených pozic dle tickeru.

        =======================================================================

    FILTR může být kombinace následujících:
        -a DATETIME – after: jsou uvažovány pouze záznamy PO tomto datu (bez tohoto data).
         DATETIME je formátu YYYY-MM-DD HH:MM:SS.
        -b DATETIME – before: jsou uvažovány pouze záznamy PŘED tímto datem (bez tohoto data).
        -t TICKER – jsou uvažovány pouze záznamy odpovídající danému tickeru.
        -w WIDTH – u výpisu grafů nastavuje jejich šířku, tedy délku nejdelšího řádku na WIDTH.

        =======================================================================

    -h a --help vypíšou nápovědu."
      exit 0;;


    "list-tick") command+=1
    LIST_TICK=1;;

    "profit") command+=1
    PROFIT=1;;

    "pos") command+=1
    POS=1;;

    "last-price") command+=1;
    LAST_PRICE=1;;

    "hist-ord") command+=1;
    HIST_ORD=1;;

    "graph-pos") command+=1;
    GRAPH_POS=1;;


    "-a") DATE_FILTER_A="$2"
    shift;;
    "-b") DATE_FILTER_B="$2"
    shift;;
    "-t") T_FILTER+="$2 "
    shift;;
    "-w")
    WIDTH_BOOL=1
    WIDTH="$2"
    if [ $WIDTH -le 0 ]
    then
    >&2 echo "Chybné spuštění: Argument -w musí být kladné číslo."
    exit 1
    fi
    shift;;
    *.gz) FILES="${FILES}$(gzip -dkc "$1" | cat)"
    FILES="${FILES}
    "
    #FILES+="${1%%.*}.log "
    ;;
    *)if [ -r "$1" ]
    then
    FILES="${FILES}$(cat "$1")"
    FILES="${FILES}
    "
    else
    >&2 echo "Chybné spuštění: Soubor nelze přečíst/neplatný soubor."
    exit 1
    fi
    ;;
# TODO rm "${1%%.*}.log"


  esac
  if [ $command -gt 1 ]
  then
  >&2 echo "Chybné spuštění: Zadán více než 1 příkaz."
  exit 1
  fi
  shift
done

STANDINPT=0
if [ "$FILES" = "" ]
then
  STANDINPT=1
  FILES+=$(cat -)
fi

function filter_tickers {
  if [ "$T_FILTER" = "" ]
  then
  echo "${FILES%?}" | awk -v date_after="$DATE_FILTER_A" -v date_before="$DATE_FILTER_B" -F ';' '
  {if($1 > date_after && $1 < date_before){print $2}}' | sort -u
  else
  echo "${FILES%?}" | awk -v string="$T_FILTER" -v date_after="$DATE_FILTER_A" -v date_before="$DATE_FILTER_B" -F ';' '
    {
      split(string, arr, " ");
      for(i in arr){
        if($2 == arr[i]){
          if($1 > date_after && $1 < date_before){print $2}
        }
      }
    }' | sort -u
  fi
}
function filter {
if [ "$T_FILTER" = "" ]
then
echo "${FILES%?}" | awk -v date_after="$DATE_FILTER_A" -v date_before="$DATE_FILTER_B" -F ';' '
{if($1 > date_after && $1 < date_before){print}}'
else
echo "${FILES%?}" | awk -v string="$T_FILTER" -v date_after="$DATE_FILTER_A" -v date_before="$DATE_FILTER_B" -F ';' '
  {
    iteration=0
    split(string, arr, " ");
    for(i in arr){
      if($2 == arr[i]){
        if($1 > date_after && $1 < date_before){print}
      }
    }
  }'
fi
}



function list_tick {

if [ $STANDINPT -eq 1 ]
then
filter_tickers
else
filter_tickers | awk -F '\n' '{if(NR >1){print}}'
#TODO| awk '{if(NR != 1) {print}}'
fi
}

function profit {

  filter |  awk -F ';' '{
    if($3 == "buy"){
      sum-=$6*$4
    }
    else{
      sum+=$6*$4
    }
  }
  END{printf "%.2f\n", sum}'
}
 function find_longest_pos {
   LONGEST_LEN=0
   TICKERS=$(filter_tickers)
   for ticker in $TICKERS
   do
   HELP=$(filter | awk -v ticker="$ticker" -F ';' '{
        split(ticker, arr, " ");
        for(i in arr){
       if($2 == arr[i]){
          if($3 == "buy"){
            sum+=$6
          }
          else{
            sum-=$6
          }
          price=$4;
        }
      }
    }END{printf"%d", length(sum * price)}')
    if [ $HELP -gt $LONGEST_LEN ]
    then
      LONGEST_LEN=$HELP
    fi
    done
    echo $LONGEST_LEN
 }

 function find_longest_lprice {
   LONGEST_LEN=0
   TICKERS=$(filter_tickers)
   for ticker in $TICKERS
   do
   HELP=$(filter | awk -v ticker="$ticker" -F ';' '{
        split(ticker, arr, " ");
        for(i in arr){
       if($2 == arr[i]){
          price=$4;
        }
      }
    }END{printf"%d", length(price)}')
    if [ $HELP -gt $LONGEST_LEN ]
    then
      LONGEST_LEN=$HELP
    fi
    done
    echo $LONGEST_LEN
 }


function pos {
    TICKERS=$(filter_tickers)
    LENGTH=$(find_longest_pos)
    for ticker in $TICKERS
    do
    filter | awk -v l=$LENGTH -v ticker="$ticker" -F ';' '{
         split(ticker, arr, " ");
         for(i in arr){
        if($2 == arr[i]){
           if($3 == "buy"){
             sum+=$6
           }
           else{
             sum-=$6
           }
           price=$4;
         }
       }
     }END{printf"%-10s: %*.2f\n", ticker, l, sum*price}'
     done
}

function last_price {
  LENGTH=$(find_longest_lprice)
  TICKERS=$(filter_tickers)
  for ticker in $TICKERS
  do
  filter | awk -F ';' -v l=$LENGTH -v ticker="$ticker" '{
       split(ticker, arr, " ");
       for(i in arr){
       if($2 == arr[i]){
         price=$4}
       }
     }END{printf"%-10s: %*.2f\n", ticker, l, price}'
  done
}

function hist_ord {
  TICKERS=$(filter_tickers)
  for ticker in $TICKERS
  do
  filter | awk -F ';' -v ticker="$ticker" '{
     split(ticker, arr, " ");
     for(i in arr){
     if($2 == arr[i]){
         counter++
       }
     }
     }END{
       iteration=0
       printf"%-10s:", ticker
      for(i=0; i < counter; i++){
        if(iteration==0){
          printf" "
          iteration++
        }
        printf"#";
      }
      printf"\n"
      }'
  done
}

function find_max_val_hist {
  MAX_VAL=0 #NOT SURE ABOUT THIS Xd
  TICKERS=$1
  for ticker in $TICKERS
  do
  VAR=$(filter | awk -F ';' -v ticker="$ticker" '{
    split(ticker, arr, " ");
    for(i in arr){
      if($2 == arr[i]){
        counter++
      }
    }
  }END{print counter}')
  if [ $VAR -gt $MAX_VAL ]
  then
  MAX_VAL=$VAR
  fi
  done
  echo $MAX_VAL
}

function hist_ord_w {

  TICKERS=$(filter_tickers)
  MAX_VAL=$(find_max_val_hist "$TICKERS")
  STEP=$(($MAX_VAL/$WIDTH))

  for ticker in $TICKERS
  do
  filter | awk -F ';' -v max_val=$MAX_VAL -v width=$WIDTH -v  ticker="$ticker"  '{
    step=(max_val/width)

    split(ticker, arr, " ");
    for(i in arr){
    if($2 == arr[i]){
        counter++
      }
    }
   }END{
     iteration=0
     printf"%-10s:", ticker
     for(i=step; i <= counter; i+=step){
       if(iteration==0){
         printf" "
         iteration++
       }
       printf"#"
      }
   printf"\n"
 }'
  done
}



function graph_pos {

  TICKERS=$(filter_tickers)
  for ticker in $TICKERS
  do
  filter | awk -F ';' -v spaces="      " -v ticker="$ticker"  '{
     split(ticker, arr, " ");
     for(i in arr){
       if($2 == arr[i]){
         if($3 == "buy"){
           sum+=$6
         }
         else{
           sum-=$6
         }
         price=$4;
       }
     }
     result = int((sum*price)/1000)
   }END{
     if(result < 0){
       printf"%-10s: ", ticker
       for(i=result; i < 0; i++){
         printf"!"
        }
     }
   else{
     printf"%-10s: ", ticker
     for(i=0; i < result; i++){
       printf"#"
      }
   }
   printf"\n"
 }'
  done
}

function find_max_val_pos {
  MAX_VAL=0 #NOT SURE ABOUT THIS Xd
  TICKERS=$1
  for ticker in $TICKERS
  do
  VAR=$(filter | awk -F ';' -v ticker="$ticker" '{
    split(ticker, arr, " ");
    for(i in arr){
      if($2 == arr[i]){
        if($3 == "buy"){
          sum+=$6
        }
        else{
          sum-=$6
        }
        price=$4;
      }
    }
  }END{print int(sum*price)}')
  if [ $VAR -lt 0 ]
  then
  VAR=$(($VAR*-1))
  fi
  if [ $VAR -gt $MAX_VAL ]
  then
  MAX_VAL=$VAR
  fi
  done
  echo $MAX_VAL
}


function graph_pos_w {

  TICKERS=$(filter_tickers)
  MAX_VAL=$(find_max_val_pos "$TICKERS")
  for ticker in $TICKERS
  do
  filter | awk -F ';' -v max_val=$MAX_VAL -v width=$WIDTH -v  ticker="$ticker"  '{
    step=(max_val/width)
     split(ticker, arr, " ");
     for(i in arr){
       if($2 == arr[i]){
         if($3 == "buy"){
           sum+=$6
         }
         else{
           sum-=$6
         }
         price=$4;
       }
     }
     result = int((sum*price))
   }END{
     iteration=0
     if(result < 0){
       printf"%-10s:", ticker
       for(i=result+step; i <= 0; i+=step){
         if(iteration==0){
           printf" "
           iteration++
         }
         printf"!"
        }
     }
   else{
     printf"%-10s:", ticker
     for(i=step; i <= result; i+=step){
       if(iteration==0){
         printf" "
         iteration++
       }
       printf"#"
      }
   }
   printf"\n"
 }'
  done
}

if [ $HIST_ORD -eq 1 ]
then
    if [ $WIDTH_BOOL -eq 1 ]
      then
        hist_ord_w
        exit 0
    else
       hist_ord
       exit 0
  fi
exit 0
fi

if [ $LIST_TICK -eq 1 ]
then
    list_tick
exit 0
fi


if [ $PROFIT -eq 1 ]
then
      profit
exit 0
fi


##EXECUTE POS COMMAND
if [ $POS -eq 1 ]
then
    pos | sort -n -t ':' -r -k  2

exit 0
fi
if [ $LAST_PRICE -eq 1 ]
then
    last_price

exit 0
fi
if [ $GRAPH_POS -eq 1 ]
then
  if [ $WIDTH_BOOL -eq 1 ]
    then
      graph_pos_w
      exit 0
  else
     graph_pos
     exit 0
fi
fi




#no command was given

filter | head -n -1
exit 0
